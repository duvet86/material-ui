{
  "extends": "react-app",
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "graphql"],
  "rules": {
    "no-var": "error",
    "semi": ["error", "always"],
    "eol-last": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": "off",
    "jsx-a11y/alt-text": [0],
    "react/jsx-no-bind": [
      2,
      {
        "ignoreRefs": true
      }
    ]
  }
}
